<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTituloMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro Meta"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo Monto -->
    <EditText
        android:id="@+id/inputMontoMeta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Monto"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloMeta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Campo Plazo -->
    <EditText
        android:id="@+id/inputPlazoMeta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Plazo (en meses)"
        android:inputType="number"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputMontoMeta"
        app:layout_constraintStart_toStartOf="@id/inputMontoMeta"
        app:layout_constraintEnd_toEndOf="@id/inputMontoMeta" />

    <!-- Campo Descripción -->
    <EditText
        android:id="@+id/inputDescripcionMeta"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:hint="Descripción"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputPlazoMeta"
        app:layout_constraintStart_toStartOf="@id/inputPlazoMeta"
        app:layout_constraintEnd_toEndOf="@id/inputPlazoMeta" />

    <!-- Botón Añadir -->
    <Button
        android:id="@+id/btnAñadirMeta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/inputDescripcionMeta"
        app:layout_constraintStart_toStartOf="@id/inputDescripcionMeta"
        app:layout_constraintEnd_toEndOf="@id/inputDescripcionMeta" />

</androidx.constraintlayout.widget.ConstraintLayout>
