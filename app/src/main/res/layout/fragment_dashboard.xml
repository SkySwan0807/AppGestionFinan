<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTituloRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Registro"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo Monto -->
    <EditText
        android:id="@+id/inputMonto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Monto"
        android:inputType="numberDecimal"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloRegistro"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Selector Ingreso/Gasto -->
    <Spinner
        android:id="@+id/spinnerTipo"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:entries="@array/tipo_registro"
        app:layout_constraintTop_toBottomOf="@id/inputMonto"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/inputMonto"
        app:layout_constraintEnd_toEndOf="@id/inputMonto" />

    <!-- Selector Categoría -->
    <Spinner
        android:id="@+id/spinnerCategoria"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:entries="@array/categorias"
        app:layout_constraintTop_toBottomOf="@id/spinnerTipo"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/spinnerTipo"
        app:layout_constraintEnd_toEndOf="@id/spinnerTipo" />

    <!-- Botón Añadir -->
    <Button
        android:id="@+id/btnAñadir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Añadir"
        app:layout_constraintEnd_toEndOf="@id/spinnerCategoria"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/spinnerCategoria"
        app:layout_constraintTop_toBottomOf="@id/spinnerCategoria" />

</androidx.constraintlayout.widget.ConstraintLayout>
